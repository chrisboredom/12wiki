<%= form_for @article do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <br>
  <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name, { promt: "Choose a Category" } %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>